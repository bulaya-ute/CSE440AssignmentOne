<BackgroundWidget>
    #on_touch_down: app.deselect_all_cards()

    MDBoxLayout:
        orientation: "vertical"
        spacing: "40dp"
        md_bg_color: app.theme_cls.surfaceColor
        padding: "20dp", "20dp"
        id: "box_layout"

        Row:
            MDLabel:

            Subject:
                text: "Alice"
            MDLabel:

            Subject:
                text: "Bob"
            MDLabel:

        Row:

            MDLabel:

            ConflictOfInterest:
                label: "Bank"

                Dataset:
                    text: "Citibank"
                    conflict_of_interest: "bank"

                Dataset:
                    text: "Bank of America"
                    conflict_of_interest: "bank"

                Dataset:
                    text: "Bank of the West"
                    conflict_of_interest: "bank"


            MDLabel:

            ConflictOfInterest:
                label: "Gasoline"

                Dataset:
                    text: "Shell"
                    conflict_of_interest: "gasoline"

                Dataset:
                    text: "Mobil"
                    conflict_of_interest: "gasoline"

                Dataset:
                    text: "Sunoco"
                    conflict_of_interest: "gasoline"

                Dataset:
                    text: "Texaco"
                    conflict_of_interest: "gasoline"

            MDLabel:

        Row:
            MDBoxLayout:
                orientation: "horizontal"

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_size: True

                    MDButton:
                        on_release: app.clear_lines()

                        MDButtonText:
                            text: "Clear Lines"

                    MDButton:
                        on_release: app.deselect_all_cards()

                        MDButtonText:
                            text: "Deselect all cards"

                MDBoxLayout:
                    orientation: "vertical"
                    adaptive_height: True

                    MDLabel:
                        id: read_access_label
                        text: "Read:"
                        size_hint_y: None
                        height: "50dp"


                    MDLabel:
                        id: write_access_label
                        text: "Read:"
                        size_hint_y: None
                        height: "50dp"


<ConflictOfInterest>
    orientation: "vertical"
    padding: "20dp", "20dp"
    spacing: "20dp"
    # md_bg_color: 0.8, 0.8, 0.8, 0.5
    adaptive_size: True

    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1  # Grey color
        Line:
            width: 1
            rounded_rectangle: [self.x, self.y, self.width, self.height, 20]




<Row>
    orientation: "horizontal"
    spacing: "20dp"
    padding: "20dp", "20dp"
    #md_bg_color: 0.0, 0.8, 0.8, 0.2
    radius: "10dp"




<Subject>
    halign: "center"
    radius: "10dp"
    size_hint: None, None
    size: "100dp", "100dp"
    pos_hint: {"center_x": 0.5}
    on_release: app.toggle_card_selection(self)
    MDLabel:
        text: root.text
        halign: root.halign
        radius: root.radius
        theme_text_color: "Custom"
        text_color: root.color


<Dataset@Subject>


<Title>:
    md_bg_color: 0, 0, 1, 0.2
    halign: "center"
    radius: "10dp"
    size_hint: 1, None
    #width: "100dp"
    pos_hint: {"center_x": 0.5}
    height: "50dp"

